{
    "extends": ["tslint:recommended", "tslint-react"],
    "rules": {
        "max-line-length": [true, 100],
        "semicolon": [true, "never"],
        "quotemark": [true, "single"],
        "variable-name": [true, "allow-leading-underscore", "allow-pascal-case"],
        "class-name": [false],
        "no-namespace": [false],
        "jsx-no-multiline-js": [false],
        "jsx-no-lambda": [false]
    }
}
